package daysAndDates; // Added missing semicolon

public class DaysOfWeek {
    public static String DayOfWeekStr(int NumberOfDay) {
        String dayStr = ""; // Added missing semicolon
        switch (NumberOfDay) {
            case 1:
                dayStr = "Sunday";
                break;
            case 2:
                dayStr = "Monday";
                break;
            case 3:
                dayStr = "Tuesday"; // Added missing semicolon
                break;
            case 4:
                dayStr = "Wednesday";
                break; // Added missing break
            case 5:
                dayStr = "Thursday";
                break;
            case 6:
                dayStr = "Friday"; // Day 6 should be Friday, not Thursday
                break;
            case 7:
                dayStr = "Saturday";
                break;
            default:
                dayStr = "Invalid day"; // Added default case for safety
                break;
        }
        return dayStr; // Added missing return statement
    }
}
